<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.HeaderTransaction" table="tb_r_hdr_transaction">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="receiptNumber">
            <column name="receipt_number" not-null="true" unique="true"/>
        </property>
        <many-to-one name="customer" class="com.lawencon.laundry.entity.Customer">
            <column name="customer_id" not-null="true"/>
        </many-to-one>
        <property name="startDate">
            <column name="start_date" not-null="true"/>
        </property>
        <property name="totalCost">
            <column name="total_cost"/>
        </property>
        <property name="totalWeight">
            <column name="total_weight"/>
        </property>
        <many-to-one name="user" class="com.lawencon.laundry.entity.User">
            <column name="user_id" not-null="true"/>
        </many-to-one>
    </class>

</hibernate-mapping>