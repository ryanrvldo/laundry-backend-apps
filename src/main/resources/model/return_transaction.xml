<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.ReturnTransaction" table="tb_r_return_transaction">
        <id name="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="detailTransaction" class="com.lawencon.laundry.entity.DetailTransaction">
            <column name="dtl_id" not-null="true"/>
        </many-to-one>
        <property name="returnDate">
            <column name="return_date" not-null="true"/>
        </property>
    </class>

</hibernate-mapping>