<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.Member" table="tb_m_member">
        <id name="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="customer" class="com.lawencon.laundry.entity.Customer">
            <column name="customer_id" not-null="true" unique="true"/>
        </many-to-one>
        <many-to-one name="membership" class="com.lawencon.laundry.entity.Membership">
            <column name="membership_id" not-null="true"/>
        </many-to-one>
        <property name="startDate">
            <column name="start_date" not-null="true"/>
        </property>
        <property name="expiredDate">
            <column name="expired_date" not-null="true"/>
        </property>
    </class>

</hibernate-mapping>