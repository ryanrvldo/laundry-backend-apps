<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.Role" table="tb_m_role">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="code" not-null="true" length="10" unique="true"/>
        <property name="name">
            <column name="role_name" not-null="true" length="50" unique="true"/>
        </property>
    </class>

</hibernate-mapping>