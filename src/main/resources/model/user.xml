<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.User" table="tb_m_user">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="username" not-null="true" unique="true"/>
        <property name="password">
            <column name="user_password" not-null="true" length="512"/>
        </property>
        <many-to-one name="profile" class="com.lawencon.laundry.entity.Profile" lazy="false">
            <column name="profile_id"/>
        </many-to-one>
        <many-to-one name="role" class="com.lawencon.laundry.entity.Role" lazy="false">
            <column name="role_id"/>
        </many-to-one>
        <property name="isActive">
            <column name="is_active" default="true"/>
        </property>
    </class>

</hibernate-mapping>