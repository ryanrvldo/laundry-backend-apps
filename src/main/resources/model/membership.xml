<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.Membership" table="tb_m_membership">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="code" not-null="true" unique="true" length="5"/>
        <property name="name">
            <column name="membership_name" not-null="true" unique="true" length="100"/>
        </property>
        <property name="discount" not-null="true"/>
    </class>

</hibernate-mapping>