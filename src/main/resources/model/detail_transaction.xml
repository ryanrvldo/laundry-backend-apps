<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.DetailTransaction" table="tb_r_dtl_transaction">
        <id name="id">
            <generator class="identity"/>
        </id>
        <many-to-one name="headerTransaction" class="com.lawencon.laundry.entity.HeaderTransaction">
            <column name="hdr_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="item" class="com.lawencon.laundry.entity.Item">
            <column name="item_id" not-null="true"/>
        </many-to-one>
        <property name="quantity" not-null="true"/>
        <property name="finishDate">
            <column name="finish_date"/>
        </property>
    </class>

</hibernate-mapping>