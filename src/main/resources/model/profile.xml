<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.Profile" table="tb_m_profile">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="fullName">
            <column name="full_name" not-null="true"/>
        </property>
        <property name="phone" not-null="true" length="50" unique="true"/>
        <property name="email" not-null="true" unique="true"/>
        <property name="address"/>
    </class>

</hibernate-mapping>