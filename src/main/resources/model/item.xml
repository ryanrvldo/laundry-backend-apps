<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.lawencon.laundry.entity.Item" table="tb_m_item">
        <id name="id">
            <generator class="identity"/>
        </id>
        <property name="code" not-null="true" length="20"/>
        <property name="name">
            <column name="item_name" not-null="true" length="100"/>
        </property>
        <many-to-one name="itemService" class="com.lawencon.laundry.entity.ItemService">
            <column name="service_id" not-null="true" unique="true"/>
        </many-to-one>
    </class>

</hibernate-mapping>